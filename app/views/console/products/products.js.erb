<% if @action == 'subcat' %>
  $('#subcat_box').replaceWith("<%= j render partial: 'cat_selectbox',locals: { subcategories: @subcategories, method: @method } %>");
  $('#product_subcategory_id').val('<%= @subcategories[0][1] %>');

<% elsif @action == 'search' %>
  $('.product_list').html("<%= j render partial: 'item', locals: { products: @products } %>");
  $('.count span').text('<%= @rows %>');

