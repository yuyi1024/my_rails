<% if @action == 'ship_method' %>
	$('#freight span').text('$ <%= @freight %>');
	$('#total span').text('$ <%= number_with_delimiter(@total) %>');

	<% if @ship_method == 'pickup_and_cash' %>
		$('#order_pay_method').html("<option value='pickup_and_cash'>超商取貨付款</option>");
	<% else %>
		$('#order_pay_method').html("<option value='cash_card'>信用卡</option><option value='atm'>實體ATM</option>");
	<% end %>
	
<% elsif @action == 'get_user_data' %>
	$('#order_true_name').val("<%= @user.true_name%>");
	$('#order_email').val("<%= @user.email%>");
	$('#order_phone').val("<%= @user.phone%>");
	<% if @order.ship_method == 'home_delivery' %>
		$('#order_address').val("<%= @user.address%>");
	<% end %>
<% end %>

