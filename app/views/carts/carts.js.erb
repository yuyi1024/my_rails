<% if @action == 'add' %>
	$('.items').html("<%= j render partial: 'cart_item' %>");
	$('.cart_number').text('<%= @cart_length %>');

	$.notify({
		icon: 'glyphicon glyphicon-shopping-cart',
		message: '已將【<%= @add_item %>】加入購物車！',
	},{
		type: 'success',
	});

<% elsif @action == 'change' %>
	$('.items').html("<%= j render partial: 'cart_item' %>");

<% elsif @action == 'destroy' %>
	$('.items').html("<%= j render partial: 'cart_item' %>");
	$('.cart_number').text('<%= @cart_length %>');
	
<% end %>






